                            android:textColor="@color/white"
                            android:textSize="@dimen/font_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_24"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="@dimen/timer_tiker_single_width_small"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@null"
                                    android:src="@drawable/timer_back" />

                                <TextView
                                    android:id="@+id/hours1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text=""
                                    android:textColor="@color/yellow"
                                    android:textSize="@dimen/font_16"
                                    android:textStyle="bold" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="@dimen/timer_tiker_single_width_small"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@null"
                                    android:src="@drawable/timer_back" />

                                <TextView
                                    android:id="@+id/hours2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text=""
                                    android:textColor="@color/yellow"
                                    android:textSize="@dimen/font_16"
                                    android:textStyle="bold" />
                            </FrameLayout>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:gravity="center_vertical"
                                android:text="@string/semi_colon"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="@dimen/timer_tiker_single_width_small"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin_5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@null"
                                    android:src="@drawable/timer_back" />

                                <TextView
                                    android:id="@+id/minutes1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text=""
                                    android:textColor="@color/yellow"
                                    android:textSize="@dimen/font_16"
                                    android:textStyle="bold" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="@dimen/timer_tiker_single_width_small"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@null"
                                    android:src="@drawable/timer_back" />

                                <TextView
                                    android:id="@+id/minutes2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text=""
                                    android:textColor="@color/yellow"
                                    android:textSize="@dimen/font_16"
                                    android:textStyle="bold" />
                            </FrameLayout>


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:gravity="center_vertical"
                                android:text="@string/semi_colon"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="@dimen/timer_tiker_single_width_small"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin_5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@null"
                                    android:src="@drawable/timer_back" />

                                <TextView
                                    android:id="@+id/seconds1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text=""
                                    android:textColor="@color/yellow"
                                    android:textSize="@dimen/font_16"
                                    android:textStyle="bold" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="@dimen/timer_tiker_single_width_small"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@null"
                                    android:src="@drawable/timer_back" />

                                <TextView
                                    android:id="@+id/seconds2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:text=""
                                    android:textColor="@color/yellow"
                                    android:textSize="@dimen/font_16"
                                    android:textStyle="bold" />
                            </FrameLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="19"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/play_game_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/play_btn_box_height"
                        android:layout_above="@+id/footer_layout"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@drawable/rounded_button_yellow"
                        android:text="@string/button_play_new"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/footer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignEnd="@+id/play_button"
                        android:layout_alignLeft="@+id/play_button"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/play_button"
                        android:layout_alignStart="@+id/play_button"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/margin_20"
                        android:paddingRight="@dimen/margin_20">

                        <TextView
                            android:id="@+id/open_prizes"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/prizes"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_12" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/open_faq"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/faq"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_12" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/open_about_us"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/about_us"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_12" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/open_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="@string/privacy_policy"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/notification_layout"
                layout="@layout/in_app_notification" />


        </FrameLayout>


        <FrameLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/rotate_bg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"

                android:scaleType="matrix"
                android:src="@drawable/bg" />

            <ImageView
                android:id="@+id/rotate_bg4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"

                android:scaleType="matrix"
                android:src="@drawable/bg" />

            <LinearLayout

