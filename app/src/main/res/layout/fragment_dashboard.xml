                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:src="@drawable/tri" />

                        <ImageView
                            android:id="@+id/trivia_logo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tri_text"
                            android:contentDescription="@null"
                            android:src="@drawable/mid_logo" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/trivia_logo_text"

                            android:contentDescription="@null"
                            android:src="@drawable/ia" />


