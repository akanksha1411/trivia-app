                            <TextView
                                android:id="@+id/open_about_us1"

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="@string/about_us"

                                android:textColor="@color/white"
                                android:textSize="@dimen/font_12" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/margin_10"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/open_policy1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="@string/privacy_policy"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_12" />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/permission_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_50"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_toRightOf="@+id/tri_text"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:padding="@dimen/margin_20"
                android:src="@drawable/trivia_logo" />


            <TextView
                android:id="@+id/permis_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:paddingRight="@dimen/margin_10"
                android:text="@string/permission_string"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18"
                android:textStyle="bold" />

            <Button
                android:id="@+id/set_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/permis_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_20"
                android:background="@drawable/rounded_button_yellow"
                android:padding="@dimen/margin_5"
                android:text="@string/set_permission"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />
        </LinearLayout>
    </com.github.androidprogresslayout.ProgressLayout>

</RelativeLayout>